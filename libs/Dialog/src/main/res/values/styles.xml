<resources>
    
    <style name="CommonDialog" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textAppearanceMedium">@style/MyAlertTextAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:borderlessButtonStyle">@style/MyBorderlessButton</item>
    </style>

    <style name="MyAlertTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>


    <style name="MyBorderlessButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">@color/text_normal</item>
    </style>

</resources>
